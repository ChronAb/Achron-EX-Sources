// - 0) Initialise variables
int A=0;int waves = 0 + (1<<(15+numWaves+1));int WaveCount=0;

// - 1) Check all player waves
for (A=0; A<=14; A=A+1) {
    PERFORM GET_PLAYER_TIME A;
    if (current==perf_ret) {
        PERFORM GET_PLAYER_TIME_RATE A;
        if (perf_ret!=0) {waves=waves+(1<<A);WaveCount=WaveCount+1;}
    }
}

// - 2) Check the present wave
if (present==current) {waves[15]=1;WaveCount=WaveCount+1;}

// - 3) Check all natural waves
for (A=0; A<=numWaves-1; A=A+1) {
    PERFORM GET_TIME_WAVE_TIME A;
    if (current==perf_ret) {waves=waves+(1<<(A+16));WaveCount=WaveCount+1;}    
}